    }
  ],
  
  "shortcuts": [
    {
      "name": "New Game",
      "short_name": "New Game",
      "description": "Start a new color matching game",
      "url": "/?action=new-game",
      "icons": [
        {
          "src": "/assets/icons/shortcut-new-game.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Statistics",
      "short_name": "Stats",
      "description": "View your game statistics",
      "url": "/?action=stats",
      "icons": [
        {
          "src": "/assets/icons/shortcut-stats.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Adjust game settings",
      "url": "/?action=settings",
      "icons": [
        {
          "src": "/assets/icons/shortcut-settings.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "screenshots",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+tonetracker",
      "url": "/?color=%s"
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "file_handlers": [
    {
      "action": "/open-color-file/",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".gif", ".webp", ".svg"]
      },
      "icons": [
        {
          "src": "/assets/icons/file-handler-color.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "capture_links": "existing-client-navigate",
  
  "permissions": [
    "storage",
    "push"
  ],
  
  "id": "tonetracker-color-game",
  "iarc_rating_id": "e58c174a-81d0-5e02-a54f-852971bb0da9"
}
