{
  "name": "tonetracker",
  "version": "1.0.0",
  "description": "A color guessing game.",
  "main": "src/script.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/js/**/*.js",
    "format": "prettier --write src/js/**/*.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "e2e:install": "npx playwright install",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test --ui",
    "serve": "python3 -m http.server 8080 --directory .",
    "analyze": "npx vite-bundle-analyzer dist",
    "performance:audit": "npx lighthouse http://localhost:8080 --output=html --output-path=./lighthouse-report.html",
    "pwa:validate": "npx pwa-asset-generator src/assets/logo.svg assets/icons --background '#4f46e5' --index ./index.html",
    "security:audit": "npm audit",
    "size:check": "npx bundlesize"
  },
  "keywords": [
    "color",
    "game",
    "guess"
  ],
  "author": "Dr. Porkoláb Ádám",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bundlesize": "^0.18.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
